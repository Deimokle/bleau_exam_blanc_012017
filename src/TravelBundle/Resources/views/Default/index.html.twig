{% extends '@Travel/layout.html.twig' %}

{% block body %}

   <div class="container">
      <div class="row">
         <div class="col s12">
            <table>
               <thead>
                  <td>Nom de l'hotel</td>
                  <td>Capacité d'accueil</td>
                  <td>Nb d'étoiles</td>
               </thead>
               <tbody>
               {% for hotels in hotel %}
                  <td>{{ hotel.name }}</td>
                  <td>{{ hotel.capacity }}</td>
                  <td>{{ hotel.stars }}</td>
               {% endfor %}
               </tbody>
            </table>

         </div>

      </div>

   </div>
{% endblock %}