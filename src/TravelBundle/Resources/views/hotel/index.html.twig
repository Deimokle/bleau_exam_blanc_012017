{% extends 'TravelBundle::layout.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1 class="Jumbotron text-center text-primary well">Travel Hotel list</h1>
   
    
    
    <table class="table table-bordered table-striped table-condensed">
        <thead class="well">
            <tr>
                <th>Id</th>
                <th>Stars</th>
                <th>Name</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Website</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td><a href="{{ path('hotel_show', { 'id': hotel.id }) }}">{{ hotel.id }}</a></td>
                <td>{{ hotel.stars }}</td>
                <td  class="success text-success text-center">{{ hotel.name }}</td>
                <td>{{ hotel.address }}</td>
                <td class="danger text-center">{{ hotel.zipcode }}</td>
                <td class="success text-center">{{ hotel.city }}</td>
                <td>{{ hotel.phone }}</td>
                <td>{{ hotel.email }}</td>
                <td>{{ hotel.website }}</td>
                <td>{{ hotel.capacity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('hotel_show', { 'id': hotel.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
    
{% endblock %}
